<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeviceProducerActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="85dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/producer_list" />

            <TextView
                android:id="@+id/noProducerTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/no_producer"
                android:textAlignment="center"
                android:visibility="gone" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <include layout="@layout/devices_list" />

            <TextView
                android:id="@+id/noDevicesTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/no_devices"
                android:textAlignment="center"
                android:visibility="gone" />


        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/continueBtn"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="35dp"
        android:text="@string/weiter"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/backBtn"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="35dp"
        android:background="@drawable/rounded_log_sign"
        android:text="@string/back"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/continueBtn"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>